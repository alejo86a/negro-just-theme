{% # Slogan Section %}

<div class="slogan-section color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width">
    {%- if section.settings.slogan != blank -%}
      <h2 class="slogan-section__text h1">{{ section.settings.slogan }}</h2>
    {%- else -%}
      <h2 class="slogan-section__text h1">VERDE Y BLANCO: UNA PASIÓN DE DOS COLORES.</h2>
    {%- endif -%}
  </div>
</div>
<div class="scratch-stripes-bottom"></div>

{% schema %}
{
  "name": "Slogan Section",
  "tag": "section",
  "class": "section-slogan",
  "settings": [
    {
      "type": "text",
      "id": "slogan",
      "default": "VERDE Y BLANCO: UNA PASIÓN DE DOS COLORES.",
      "label": "Slogan"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "Accent 1"
        },
        {
          "value": "accent-2",
          "label": "Accent 2"
        },
        {
          "value": "background-1",
          "label": "Background 1"
        },
        {
          "value": "background-2",
          "label": "Background 2"
        },
        {
          "value": "inverse",
          "label": "Inverse"
        }
      ],
      "default": "background-1",
      "label": "Color scheme"
    }
  ],
  "presets": [
    {
      "name": "Slogan Section"
    }
  ]
}
{% endschema %}

