{% comment %}
  404 Error Page Section
{% endcomment %}

<div class="page-404 color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width">
    <div class="page-404__content">
      <h1 class="page-404__title h1">{{ 'templates.404.title' | t }}</h1>
      <p class="page-404__subtext">{{ 'templates.404.subtext' | t }}</p>
      <a href="{{ routes.root_url }}" class="button button--primary page-404__button">
        {{ 'templates.404.back_to_home' | t }}
      </a>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "404",
  "tag": "section",
  "class": "section-main-404",
  "settings": [
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "Accent 1"
        },
        {
          "value": "accent-2",
          "label": "Accent 2"
        },
        {
          "value": "background-1",
          "label": "Background 1"
        },
        {
          "value": "background-2",
          "label": "Background 2"
        },
        {
          "value": "inverse",
          "label": "Inverse"
        }
      ],
      "default": "background-1",
      "label": "Color scheme"
    }
  ],
  "presets": [
    {
      "name": "404"
    }
  ]
}
{% endschema %}

